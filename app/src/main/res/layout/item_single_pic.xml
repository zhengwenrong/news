<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/item_transition"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_news_pic"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_width="250px"
        android:layout_marginRight="15px"
        android:scaleType="centerCrop"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_height="170px" />

    <TextView
        android:id="@+id/tv_news_title"
        android:textSize="30px"
        android:textColor="#000000"
        android:layout_marginTop="30px"
        android:ellipsize="end"
        android:transitionName="@string/title"
        android:maxLines="2"
        android:layout_marginLeft="15px"
        android:gravity="left"
        android:layout_marginRight="15px"
        android:layout_toLeftOf="@id/iv_news_pic"
        tools:text="帝都工作十几年的码农月薪不到三万,很失败吗?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="25px"
        android:id="@+id/tv_news_author"
        android:layout_below="@id/tv_news_title"
        android:layout_width="wrap_content"
        tools:text="环球新闻网"
        android:layout_marginLeft="15px"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_marginTop="25px"
        android:layout_below="@id/tv_news_title"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/tv_news_author"
        tools:text="2017-10-04 15:38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="#33000000"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"/>


</RelativeLayout>