<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/item_transition"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000000"
        android:transitionName="@string/title"
        android:textSize="30px"
        tools:text="帝都工作十几年的码农月薪不到三万,很失败吗?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="8px"
        android:layout_marginLeft="8px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_news_pic1"
            tools:background="#ff0000"
            android:layout_width="0dp"
            android:layout_margin="7px"
            android:layout_height="160px"
            android:layout_weight="1" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_news_pic2"
            android:layout_width="0dp"
            android:layout_height="160px"
            android:layout_weight="1"
            android:layout_margin="7px"
            tools:background="#00ff00"
             />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_news_pic3"
            tools:background="#0000ff"
            android:layout_margin="7px"
            android:layout_width="0dp"
            android:layout_height="160px"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/tv_news_author"
            android:layout_width="wrap_content"
            tools:text="环球新闻网"
            android:layout_marginLeft="15px"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_marginTop="10px"
            android:layout_marginLeft="30px"
            tools:text="2017-10-04 15:38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="10px"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>